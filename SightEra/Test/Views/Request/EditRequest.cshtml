@model RequestUser
@using Test.Data;
@{
    ViewData["Title"] = "Edit Request";
}

<form asp-action="EditRequest">
    <div class="row">
        <div class="col-md-6">
            <h4>send a new request</h4>
            <hr />
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control" maxlength="100" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select class="form-select custom-select" asp-for="Gender">
                    <option value="">Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" maxlength="11" pattern="^01[0-2|5]{1}[0-9]{8}$" type="tel" required/>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age"></label>
                <input asp-for="Age" type="text" class="form-control" min="1" max="120" maxlength="2" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RadiologistId" class="control-label">Radiologist Name</label>
                <select asp-for="RadiologistId" class="form-control" asp-items="ViewBag.Radiologists"></select>
                <span asp-validation-for="RadiologistId" class="text-danger"></span>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary d-block mt-4">Edit</button>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}